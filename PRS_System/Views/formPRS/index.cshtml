    <script src="js/vendor/jquery-1.10.2.min.js"></script>
    <script src="js/min/plugins.min.js"></script>
    <style>

        .dropdown {
            padding: 15px 40px;
            display: block;
            font-size: 14px;
        }

            .dropdown i {
                margin-right: 15px;
                font-size: 24px;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #EEEEEE;
