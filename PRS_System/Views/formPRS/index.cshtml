	        background-size: cover;
	        z-index: 2;
        }

        .banner-overlay {
	        position: absolute;
	        width: 100%;
	        height: 100%;
	        background: rgba($dark-bg, 0.4);
	        top: 0;
	        left: 0;
	        z-index: 3;
        }

    </style>
</head>
<body>
    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="responsive-header visible-xs visible-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="top-section">
                        <div class="profile-content">
                            <h3 class="profile-title">@Context.Session.GetString("uid")</h3>
                            <p class="profile-description">@Context.Session.GetString("thainame")</p>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#" class="toggle-menu"><i class="fa fa-bars"></i></a>
            <div class="main-navigation responsive-menu">
                <ul class="navigation">
                    <li><a href="#home"><i class="fa fa-globe"></i>Home</a></li>
                    <li><a href="#history"><i class="fa fa-pencil"></i>History</a></li>
                    <li><a href="#form"><i class="fa fa-link"></i>Form</a></li>
                    <li><a href="#setting"><i class="fa fa-cog"></i>Admin Setting</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- SIDEBAR -->
    <div class="sidebar-menu hidden-xs hidden-sm">
        <div class="top-section">
            <h3 class="profile-title">@Context.Session.GetString("uid")</h3>
            <p class="profile-description">@Context.Session.GetString("thainame")</p>
        </div> <!-- top-section -->
        <div class="main-navigation">
            <ul class="navigation">
                <li><a href="#home"><i class="fa fa-globe"></i>Home</a></li>
                <li><a href="#history"><i class="fa fa-pencil"></i>History</a></li>
                <li><a href="#form"><i class="fa fa-link"></i>Form</a></li>
                @if (Context.Session.GetString("type_person").ToString() == "Admin")
                {
                    <li class="dropdown">
                    <i class="fa fa-cog"></i>Admin Setting
                    <div class="dropdown-content">
                        <a href="@Url.Action("ShowListuser","AdminSetting")" id="Admin_Setting">Admin Control</a>
                        <a href="@Url.Action("informationsetting","AdminSetting")" id="Information_Setting">Information Control</a>
                    </div>
                </li>
                }
                
                @if (!string.IsNullOrEmpty(Context.Session.GetString("AccessToken")))
                {
                    <li><a href="@Url.Action("Logout","Login")"><i class="fa fa-sign-out"></i>Logout</a></li>
                }
            </ul>
        </div> <!-- .main-navigation -->
    </div> <!-- .sidebar-menu -->

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="fluid-container">

            <div class="w3-container w3-card-4 w3-light-grey">

                <!-- HISTORY -->
                <div class="page-section" id="history">
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="widget-title">History</h4>
                            <p>ตารางหน้าคำขอผู้จัดซื้อ</p>
                            <button class="button button1" id="createbutton">+Create</button>
                            <hr>
                            <table id="customers">
                                <tr>
                                    <th>No.</th>
                                    <th>Procurement Request</th>
                                    <th>Status</th>
                                    <th>Currently at</th>
                                    <th>Function</th>
                                    <th>Date</th>
                                </tr>
                                @{int countfield = Model.ListForm != null ? Model.ListForm.Count : 0;}
                                @for (int i = 0; i < countfield; i++)
                                {
                                    int number = i + 1;
                                    FormPRSDataModel item = Model.ListForm[i];
                                    <tr>

                                        <td>@number</td>
                                        <td>@item.nameProcument</td>
                                        @{
                                            if (item.Status == "Sent")
                                            {
                                                <td style="color:blue">@item.Status</td>
                                            }
                                            else if (item.Status == "Sent to Approval")
                                            {
                                                <td style="color:cornflowerblue">@item.Status</td>
                                            }
                                            else if (item.Status == "Return to Requester")
                                            {
                                                <td style="color:red">@item.Status</td>
                                            }
                                            else if (item.Status == "Approved")
                                            {
                                                <td style="color:lawngreen">@item.Status</td>
                                            }
                                            else if (item.Status == "Draft")
                                            {
                                                <td style="color:black">@item.Status</td>
                                            }
                                        }
                                        <td>
                                            @item.cerrent_flow
                                        </td>

                                        <td>
                                            <button style="display:@(item.Status=="Return to Requester"?"None":"block" )" class="button button2" onclick="formpage(@item.id_tor)">View</button>
                                            <button type="button" style="display:@(item.Status=="Return to Requester"?"block":"None" )" class="button button2" onclick="formpage(@item.id_tor)">Edit</button>
                                            <button type="button" style="display:@(item.Status=="Return to Requester"?"block":"None" )" class="button button3">Delete</button>
                                            <button type="button" onclick="torpdf(@item.id_tor)">Export TOR PDF</button>
                                            <button type="button" onclick="productpdf(@item.id_tor)">Export PRODUCT PDF</button>
                                            @*<button type="button" style="display:@(item.Status=="Return to Requester"?"block":"None" )" class="button button4">Draft</button>*@
                                        </td>
                                        <td>@item.Date.Value.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </table>
                            <br>
                            <p style="display:@(Model.category_user=="Admin"?"block":"None" )">ตารางหน้าฝ่ายพัสดุ</p>
                            <hr>
                            <table id="customers" style="display:@(Model.category_user=="Admin"?"block":"None" )">
                                <tr>
                                    <th>No.</th>
                                    <th>Name of Purchaser</th>
                                    <th>Procurement Request</th>
                                    <th>Status</th>
                                    <th>Currently at</th>
                                    <th>Function</th>
                                    <th>Date</th>
                                </tr>
                                <tr>
                                    @{int countfield2 = Model.ListSuppies != null ? Model.ListSuppies.Count : 0;}
                                    @{
                                        @for (int i = 0; i < countfield2; i++)
                                        {
                                            int number2 = i + 1;
                                            FormPRSDataModel item = Model.ListSuppies[i];
                                            if (item.Status != "Return to Requester" && item.Status != "Draft")
                                            {
                                                <td>@number2</td>
                                                <td>@item.Fullname_PRS</td>
                                                <td>@item.nameProcument</td>
                                                <td>@item.Status</td>
                                                <td>
                                                    @item.cerrent_flow
                                                </td>
                                                <td>
                                                    <button class="button button2" onclick="formpage(@item.id_tor)">View And approval</button>
                                                </td>
                                                <td>@item.Date.Value.ToString("yyyy-MM-dd")</td>
                                            }


                                        }
                                    }



                                </tr>


                            </table>
                            <br>
                            <p style="display:@(Model.category_user=="Admin"?"block":"None" )">ตารางหน้าผู้อนุมัตื</p>
                            <hr>
                            <table id="customers" style="display:@(Model.category_user=="Admin"?"block":"None" )">
                                <tr>
                                    <th>No.</th>
                                    <th>Name of Purchaser</th>
                                    <th>Procurement Request</th>
                                    <th>Status</th>
                                    <th>Currently at</th>
                                    <th>Function</th>
                                    <th>Date</th>
                                </tr>
                                <tr>
                                    @{int countfield3 =  Model.ListApproval.Count ;}
                                    @{
                                        @for (int i = 0; i < countfield3; i++)
                                        {
                                            int number3 = i + 1;
                                            FormPRSDataModel item = Model.ListApproval[i];
                                            if (item.Status != "Return to Requester" && item.Status != "Draft" && item.Status != "Sent")
                                            {
                                                <td>@number3</td>
                                                <td>@item.Fullname_PRS</td>
                                                <td>@item.nameProcument</td>
                                                <td>@item.Status</td>
                                                <td>
                                                    @item.cerrent_flow
                                                </td>
                                                <td>
                                                    <button class="button button2" onclick="formpage(@item.id_tor)">View And approval</button>
                                                </td>
                                                <td>@item.Date.Value.ToString("yyyy-MM-dd")</td>
                                            }


                                        }
                                    }



                                </tr>


                            </table>
                        </div>
                    </div> <!-- #history -->
                </div>

                <div class="row" id="footer">
                    @*<div class="col-md-12 text-center">
                        <p class="copyright-text">Faculty Science &copy; Kasatsart University Sriracha campas</p>
                        </div>*@
                </div>

            </div>

        </div>
    </div>



</body>
</html>
<script>
    $(document).ready(function () {
        $("#createbutton").click(function () {
            location.href = "@Url.Action("form", "FormPRS")"+"?id_tor=0";
        });
        
        $('#UserSetting').click(function () {
            location.href = "@Url.Action("ShowListuser","AdminSetting")";
        });
        
});
</script>
<script>
    function formpage(id_tor) {
           location.href = "@Url.Action("form", "FormPRS")"+"?id_tor="+id_tor;
    }
    function torpdf(id_tor) {
        location.href = "@Url.Action("torpdf", "FormPRS")"+"?id_tor="+id_tor;
    }
    function productpdf(id_tor) {
        location.href = "@Url.Action("productpdf", "FormPRS")"+"?id_tor="+id_tor;
    }
</script>