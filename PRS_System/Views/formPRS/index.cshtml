            .dropdown-content a {
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content:hover a:hover {
                    background-color: #dddddd;
                    border-radius: 5px;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
        .dropdown:hover a {
            color: #5f6d7e;
        }

        .banner-bg {
	        padding: 260px 80px;
	        position: relative;
	        background: url('~/img/login/image_science.jpg');
	        background-repeat: no-repeat;
