    <!-- Upload img -->
    <div class="container-popup" id="popup">
        <label class="close-btn" onclick="toggle()">x</label>
        <!-- <label for="" class="close-btn"  onclick="toggle()">X</label> -->
        <form method="post" enctype="multipart/form-data" asp-controller="AdminSetting" asp-action="InformationSetting">
            <div class="form">
                <h2>Upload</h2>
                <div class="form-element">
                    <label asp-for="Description">Description</label>
                    <input type="text" id="Description" name="Description" placeholder="Description">
                </div>

                <!-- Upload img -->
                <div class="container-upload">
                    <div class="panel">
                        <div class="button_outer">
                            <div class="btn_upload">
                                <input type="file" id="FilePic" name="FilePic" accept=".png, .jpg, .jpeg"/> Selete Photo
                            </div>
                            <div class="processing_bar"></div>
                            <div class="success_box"></div>
                        </div>
                    </div>
                    <div class="error_msg" style="display:none;">"Not an Image..."</div>
                    <div class="uploaded_file_view" id="uploaded_view">
                        <span class="file_remove">X</span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-create" style="display:none;">Create</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Upload file -->
    <div class="container-popup-file" id="popup-file">
        <label class="close-btn-file" onclick="togglefile()">x</label>
        <form method="post" enctype="multipart/form-data" asp-controller="AdminSetting" asp-action="InformationSetting">
            <div class="form-file">
                <h2>News</h2>
                <div class="form-element-file">
                    <label asp-for="Description">Description</label>
                    <input type="text" id="Description" name="Description" placeholder="Description">
                </div>

                <!-- Upload file -->
                <!-- แก้ -->
                <div class="container-upload-file">
                    <div class="panel-file">
                        <div class="button_outer_file">
                            <div class="btn_upload_file">
                                <input type="file" id="FilePDF" name="FilePDF" accept=".xlsx, .xls, .doc, .docx, .ppt, .pptx, .txt, .pdf"/> Selete File
                            </div>
                            <div class="processing_bar_file"></div>
                            <div class="success_box_file"></div>
                        </div>
                    </div>
                    <div class="error_msg" style="display:none;">Not an PDF or DOS.....</div>
                    <div class="upload_file_news_view" id="upload_news_view">
                        <span class="file_news_remove">X</span>
                        @*<div id="file-upload-filename"></div>*@
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-create-file" style="display:none;">Create</button>
                </div>
            </div>
        </form>
    </div>
</body>

@section Scripts{
<script src="~/js/AddNews.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $("#addtabname").click(function(event){
           var tabname = $("#tabname").val();
            if (tabname == "" || tabname == undefined || tabname.trim() == "") {
                alert("กรุณาระบุชื่อแท็บ");
            }
            else {
                var url = "@Url.Action("addTab", "AdminSetting")?tabname=" + $("#tabname").val();
                window.location.href = url;
            }
        });
    })

</script>
