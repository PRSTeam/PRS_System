@section Scripts{
<script src="~/js/AddNews.js"></script>
<script type="text/javascript">
    var blur = document.getElementById('blur');
    function addtab() {
        var txt_tb = $("#tabname").val();
        if (txt_tb == "" || txt_tb == undefined || txt_tb.trim() == "") {
            blur.classList.toggle('active-blur');
            Swal.fire({
                icon: 'warning',
                title: 'ผิดพลาด',
                html: 'กรุณาระบุชื่อแท็บต้องการเพิ่ม',
                showConfirmButton: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#tabname").focus();
                }
                else{
                    blur.classList.toggle('active-blur');
                }
            });
        }
        else {
            blur.classList.toggle('active-blur');
            Swal.fire({
                icon: 'info',
                title: 'ต้องเพิ่มแท็บใหม่หรือไม่ ?',
                html: 'ชื่อแท็บที่ต้องการเพิ่ม : ' + txt_tb,
                showConfirmButton: true,
                confirmButtonText: 'เพิ่ม',
                showCancelButton: true,
                cancelButtonText: 'ยกเลิก'
            }).then((result) => {
                if (result.isConfirmed) {
                    try {
                        const url = '@Url.Action("addTab", "AdminSetting")?tabname=' + txt_tb;
                        $.ajax({
                            type: "POST",
                            url: url,
                            //data: JSON.stringify({ 'tabname': txt_tb }),
                            contentType: false,
                            dataType: "JSON",
                            processData: false,
                            success: function (data) {
                                console.log(data);
                                if (data.status == "error") {
                                    Swal.fire({
                                        icon: 'error',
                                        title: data.errorMessage,
                                        html: data.detail,
                                        showConfirmButton: true,
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            document.getElementById("tabname").focus();
                                        }
                                    });
                                }
                                if (data.status == "success") {
                                    window.location = "@Url.Action("informationsetting", "AdminSetting")";
                                }
                            },
                            error: function (err) {
                                console.log("Error", err);
                                alert("เกิดข้อผิดพลาด ไม่สามารถใช้งานระบบได้");
