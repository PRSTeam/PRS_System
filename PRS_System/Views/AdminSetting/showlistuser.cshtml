    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>


<body>

    <!-- MAIN -->
    <div class="main-content">
        <div class="fluid-container">
            <div class="w3-container w3-card-4 w3-light-grey">
                <!-- list -->
                <div class="page-section" id="form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="w3-container w3-pale-blue w3-hover-text-teal">
                                <h1>User Control</h1>
                                <div align="right">
                                    <button class="button button3" onclick="history.back()">Back</button>
                                </div>
                            </div>
                            <button id="newuser" class="button button4">
                                Add New User
                            </button>
                            <form asp-action="Showlistuser" asp-controller="AdminSetting">
                                <fieldset class="col-md-4 col-sm-8">
                                    <label>Keyword</label>
                                    <input asp-for="Keyword" class="w3-input w3-border w3-round" type="text" id="mySearch" placeholder="Key..">
                                    <button class="button button4" type ="submit">ค้นหา</button>
                                </fieldset>
                            </form>
                            
                        </div>
                    </div>
                    <div class="row">
                        <hr>
                        <table id="customers">
                            <tr>
                                <th>UserID</th>
                                <th>Full Name </th>
                                <th>UserType</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Function</th>
                            </tr>
                            @foreach (var item in Model.userdata)
                            {
                                <tr>
                                    <td>@item.UserID</td>
                                    <td>@item.Prefix_NameThai @item.Full_NameThai</td>
                                    <td>@item.Operate_Pos @(item.Manage_Pos == null ? "":"/"+ item.Manage_Pos) </td>
                                    <td>@item.Category</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <button onclick="edituser('@item.UserID')" class="button button2">Edit</button>
                                        <button class="button button3">Delete</button>
                                    </td>
                                </tr>
                            }
                            </table>
                    </div>
                </div>
                <hr>

                
            </div>

        </div>
    </div>

    <script src="js/vendor/jquery-1.10.2.min.js"></script>
    <script src="js/min/plugins.min.js"></script>
    <script src="js/min/main.min.js"></script>
    <script src="js/addinput.js"></script>

</body>

</html>
<script>
    function edituser(userid) {
        location.href = "@Url.Action("edituser", "AdminSetting")" + "?user_id=" + userid;
    }
</script>
