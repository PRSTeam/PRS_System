@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
</head>
<body>
    <div class="flex-box">
        <section>
            <div class="img-box">
                <div class="holder_wrap">
                    <img src="~/img/login/Banner-login.jpg" />
                    <div class="img-text" style="margin-top : 15%">
                        <h1 class="thai-lang">ระบบจัดซื้อจัดจ้าง</h1>
                    </div>
                </div>
            </div>

            <div class="content-box">
                <div class="logo">
                    <img class="logo-img" src="~/img/login/Sci-src-ku-logo.jpg" alt="">
                </div>

                <div class="form-box">
                    <h2>Sign In</h2>
                    <div class="ku-all-login">
                        <div class="btn-submit">
                            <input type="submit" value="KU ALL-LOGIN" name="" onclick="location.href='@Url.Action("Authen", "Login")'" />
                        </div>
                    </div>

                    <p class="fake-legend">
                        <span>Or</span>
                    </p>
                    <form asp-controller="Login" asp-action="Authen">
                        <div class="input-box">
                            <label>Username</label>
                            <input type="text" placeholder="username" id="username">
                        </div>
                        <div class="input-box">
                            <label>Password</label>
                            <input type="password" placeholder="password" id="password">
                        </div>
                        <div class="grid-container">
                            <div class="btn-submit">
                                <input type="submit" value="Sign in" name="sign_in" />
                            </div>
                            <div class="btn-submit">
                                <input type="reset" value="Reset" name="reset_btn"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</body>
</html>